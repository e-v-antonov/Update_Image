@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Роли пользователей";
}

<h1>Список ролей</h1>
<a asp-action="Create">Создать роль</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Номер</td>
            <td>Название</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
